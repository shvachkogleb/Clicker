@model ClickerGame.Models.Player
@{
    Layout = null;
}
@{
    int baseCost = 10;
    int increasePerLevel = 20;
    int nextUpgradeCost = baseCost + (Model.ClickPower * increasePerLevel);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Clicker Game</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg1: #0f172a;
            --bg2: #081029;
            --card: rgba(255,255,255,0.06);
            --accent: #6ee7b7;
            --accent-2: #60a5fa;
            --muted: rgba(255,255,255,0.7);
            --glass-border: rgba(255,255,255,0.08);
            --glass-shadow: 0 8px 30px rgba(2,6,23,0.6);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            background: radial-gradient(1200px 600px at 10% 10%, rgba(96,165,250,0.07), transparent), linear-gradient(135deg, var(--bg1), var(--bg2));
            color: #eef2ff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 32px;
        }

        .container {
            width: 100%;
            max-width: 860px;
            padding: 28px;
        }

        .card {
            background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
            border: 1px solid var(--glass-border);
            border-radius: 18px;
            padding: 28px;
            box-shadow: var(--glass-shadow);
            backdrop-filter: blur(6px) saturate(120%);
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin-bottom: 24px;
        }

        .logo {
            width: 52px;
            height: 52px;
            display: grid;
            place-items: center;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            font-weight: 700;
            color: #04203a;
            box-shadow: 0 6px 18px rgba(96,165,250,0.12);
        }

        h1 {
            margin: 0;
            font-size: 22px;
            letter-spacing: 0.2px;
        }

        .stats {
            display: flex;
            gap: 18px;
            margin: 18px 0 24px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .stat {
            background: rgba(255,255,255,0.02);
            border: 1px solid rgba(255,255,255,0.03);
            padding: 12px 16px;
            border-radius: 12px;
            min-width: 140px;
            text-align: center;
        }

            .stat .label {
                font-size: 12px;
                color: var(--muted);
                margin-bottom: 6px;
            }

            .stat .value {
                font-size: 18px;
                font-weight: 600;
            }

        .actions {
            display: flex;
            gap: 16px;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 14px 22px;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            font-size: 16px;
            transition: transform .12s ease, box-shadow .12s ease, opacity .12s ease;
            user-select: none;
            -webkit-tap-highlight-color: transparent;
        }

            .btn:active {
                transform: translateY(1px) scale(.998);
            }

        .btn-click {
            background: linear-gradient(90deg,var(--accent),var(--accent-2));
            color: #04203a;
            box-shadow: 0 10px 30px rgba(96,165,250,0.12);
        }

            .btn-click:hover {
                transform: translateY(-3px);
                box-shadow: 0 18px 40px rgba(96,165,250,0.18);
            }

        .btn-upgrade {
            background: transparent;
            color: #dbeafe;
            border: 1px solid rgba(255,255,255,0.06);
        }

            .btn-upgrade:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(2,6,23,0.6);
            }

        .cost {
            font-size: 13px;
            color: var(--muted);
            margin-left: 6px;
        }

        footer {
            margin-top: 20px;
            font-size: 13px;
            color: rgba(255,255,255,0.6);
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="header">
                <div class="logo">CG</div>
                <h1>Clicker Game</h1>
            </div>

            <div class="stats">
                <div class="stat">
                    <div class="label">Clicks</div>
                    <div class="value">@Model?.Clicks</div>
                </div>

                <div class="stat">
                    <div class="label">Click Power</div>
                    <div class="value">@Model?.ClickPower</div>
                </div>

                <div class="stat">
                    <div class="label">Next Upgrade</div>
                    <div class="value">@nextUpgradeCost clicks</div>
                </div>

            </div>

            <div class="actions">
                <form asp-controller="Clicker" asp-action="Click" method="post" style="margin:0;">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-click" type="submit" title="Add clicks">
                        Click!
                    </button>
                </form>

                <form asp-controller="Clicker" asp-action="BuyUpgrade" method="post" style="margin:0;">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-upgrade" type="submit" title="Buy upgrade"
                            @(Model.Clicks < nextUpgradeCost ? "disabled" : "")>
                        Buy Upgrade <span class="cost">(@nextUpgradeCost clicks)</span>
                    </button>
                </form>

                <form asp-controller="Clicker" asp-action="ResetProgress" method="post" style="margin:0;">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-upgrade" type="submit" title="Reset progress">
                        Reset Progress
                    </button>
                </form>
            </div>

        </div>
    </div>
</body>
</html>
